<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.example.apple.scancreditcard.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/zxing_custom_possible_result_points"
        android:layout_height="wrap_content"
        android:text="Credit CArd Scanner" />
    <Button
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:id="@+id/scan"
        android:layout_height="wrap_content"
        android:text="Scan CreditCard"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="expirydate"
        android:id="@+id/result1"
        android:layout_height="wrap_content" />
</LinearLayout>
